{
  "annotations": {
    "list": []
  },
  "description": "Progressive Delivery Canary Analysis - Dev / Staging / Prod",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "CANARY ANALYSIS OVERVIEW",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Pod Memory by Environment (Canary Gate)",
      "description": "The metric that determines prod rollback. Dev/Staging stay under 150MB, Prod breaches it due to stress sidecar.",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisLabel": "MB",
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto",
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 150 }
            ]
          },
          "unit": "decmbytes"
        },
        "overrides": []
      },
      "options": {
        "legend": { "calcs": ["lastNotNull", "max"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "max(\n  sum(\n    container_memory_working_set_bytes{\n      namespace=~\"kargo-demo-(dev|staging|prod)\",\n      pod=~\"kargo-demo-rollout-.*\",\n      container!=\"\",\n      container!=\"POD\"\n    }\n  ) by (pod, namespace)\n) by (namespace) / 1024 / 1024",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "DEV STAGE",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 11 },
      "collapsed": false
    },
    {
      "title": "Dev - HTTP Requests (canary check activity)",
      "description": "Shows the analysis hitting /health and /products during canary verification",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50,
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          },
          "unit": "reqps"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(http_requests_total{namespace=\"kargo-demo-dev\"}[30s])) by (route, status_code)",
          "legendFormat": "{{route}} [{{status_code}}]",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Dev - Request Latency p99",
      "description": "Response time of product-api during canary analysis",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "unit": "s"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{namespace=\"kargo-demo-dev\"}[30s])) by (le, route))",
          "legendFormat": "p99 {{route}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Dev - Redis Cache Performance",
      "description": "Cache hits vs misses — proves Redis sidecar is working",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          },
          "unit": "ops"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(cache_hits_total{namespace=\"kargo-demo-dev\"}[30s])) by (key_type)",
          "legendFormat": "hits ({{key_type}})",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(cache_misses_total{namespace=\"kargo-demo-dev\"}[30s])) by (key_type)",
          "legendFormat": "misses ({{key_type}})",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Dev - Pod Memory per Container",
      "description": "Memory breakdown showing product-api + redis sidecar",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2
          },
          "unit": "decmbytes"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(container_memory_working_set_bytes{namespace=\"kargo-demo-dev\", pod=~\"kargo-demo-rollout-.*\", container!=\"\", container!=\"POD\"}) by (container) / 1024 / 1024",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "STAGING STAGE",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 28 },
      "collapsed": false
    },
    {
      "title": "Staging - HTTP Requests",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 29 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50,
            "lineWidth": 1,
            "stacking": { "mode": "normal" }
          },
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(http_requests_total{namespace=\"kargo-demo-staging\"}[30s])) by (route, status_code)",
          "legendFormat": "{{route}} [{{status_code}}]",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Staging - Pod Memory per Container",
      "description": "Same profile as dev — no stress sidecar",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 29 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2
          },
          "unit": "decmbytes"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(container_memory_working_set_bytes{namespace=\"kargo-demo-staging\", pod=~\"kargo-demo-rollout-.*\", container!=\"\", container!=\"POD\"}) by (container) / 1024 / 1024",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "PROD STAGE (ROLLBACK DEMO)",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 37 },
      "collapsed": false
    },
    {
      "title": "Prod - Pod Memory per Container (stress sidecar visible)",
      "description": "The stress container pushes total pod memory above 150MB, triggering rollback. This is the exact query the AnalysisTemplate runs.",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 38 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "lineWidth": 2,
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 150 }
            ]
          },
          "unit": "decmbytes"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(container_memory_working_set_bytes{namespace=\"kargo-demo-prod\", pod=~\"kargo-demo-rollout-.*\", container!=\"\", container!=\"POD\"}) by (container) / 1024 / 1024",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Prod - Total Pod Memory (Analysis Query)",
      "description": "This is exactly what the canary-check AnalysisTemplate queries. When this crosses 150MB, rollback triggers.",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 38 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 25,
            "lineWidth": 3,
            "thresholdsStyle": {
              "mode": "area"
            }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 150 }
            ]
          },
          "unit": "decmbytes"
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "max(\n  sum(\n    container_memory_working_set_bytes{\n      namespace=\"kargo-demo-prod\",\n      pod=~\"kargo-demo-rollout-.*\",\n      container!=\"\",\n      container!=\"POD\"\n    }\n  ) by (pod)\n) / 1024 / 1024",
          "legendFormat": "max pod memory (prod)",
          "refId": "A"
        }
      ]
    },
    {
      "title": "ALL ENVIRONMENTS",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 48 },
      "collapsed": false
    },
    {
      "title": "Replica Count by Environment",
      "description": "Watch replicas scale during canary rollout and drop on rollback",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 49 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "count(kube_pod_info{namespace=~\"kargo-demo-(dev|staging|prod)\", pod=~\"kargo-demo-rollout-.*\"}) by (namespace)",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Container Restarts by Environment",
      "description": "Spikes here during prod indicate the stress sidecar or rollback activity",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 49 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(kube_pod_container_status_restarts_total{namespace=~\"kargo-demo-(dev|staging|prod)\", pod=~\"kargo-demo-rollout-.*\"}[1m])) by (namespace, container)",
          "legendFormat": "{{namespace}}/{{container}}",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "tags": ["kargo", "canary", "argo-rollouts", "progressive-delivery"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Canary Analysis - Progressive Delivery Demo",
  "uid": "canary-analysis-demo",
  "version": 1
}
